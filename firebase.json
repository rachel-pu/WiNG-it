{
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs18",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "**/node_modules/**",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}